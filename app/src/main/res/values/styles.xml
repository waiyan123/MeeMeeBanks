<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="TitleAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:fontFamily">@font/cybertooth_font</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="menu_text_style">
        <item name="android:textColor">@color/center_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/cybertooth_font</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="main_title_banks_style">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:textColor">@color/end_color</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_description_style">
        <item name="android:textColor">@color/end_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>



</resources>
